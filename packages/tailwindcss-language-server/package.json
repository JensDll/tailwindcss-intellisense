{
  "name": "@tailwindcss/language-server",
  "description": "Tailwind CSS Language Server",
  "license": "MIT",
  "version": "0.0.7",
  "scripts": {
    "build": "ncc build src/index.ts --minify && pnpm run hashbang",
    "dev": "ncc build src/index.ts --source-map --no-source-map-register --watch",
    "hashbang": "node --experimental-loader esbuild-node-loader \"./scripts/hashbang.ts\"",
    "prepublishOnly": "pnpm run build"
  },
  "bin": {
    "tailwindcss-language-server": "./dist/index.js"
  },
  "files": [
    "dist",
    "ThirdPartyNotices.txt"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.0.5",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/language-service": "workspace:*",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.1",
    "autoprefixer": "^10.4.2",
    "builtin-modules": "^3.2.0",
    "chokidar": "^3.5.3",
    "color-name": "^1.1.4",
    "culori": "^0.20.1",
    "debounce": "^1.2.1",
    "detective": "^5.2.0",
    "dlv": "^1.1.3",
    "dset": "^3.1.1",
    "enhanced-resolve": "^5.8.3",
    "fast-glob": "^3.2.11",
    "find-up": "^5.0.0",
    "klona": "^2.0.5",
    "minimatch": "^3.0.4",
    "normalize-path": "^3.0.0",
    "pkg-up": "^3.1.0",
    "postcss": "^8.4.5",
    "postcss-load-config": "^3.1.1",
    "postcss-selector-parser": "^6.0.9",
    "resolve": "^1.22.0",
    "semver": "^7.3.5",
    "stack-trace": "^0.0.10",
    "tailwindcss": "^3.0.18",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.4",
    "vscode-uri": "^3.0.3"
  }
}
